@model IEnumerable<Domain.Entities.Login>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="panel panel-default">
    <div class="panel-heading">
        Spis Adminow
    </div>

    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <tr>
                <th class="text-right">
                    @Html.DisplayNameFor(model => model.LoginId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Pass)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Imie)
                </th>
                <th class="text-center">
                    Działania
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @item.LoginId
                    </td>
                    <td>
                        @Html.ActionLink(item.Imie, "Edit", new { item.LoginId })
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Imie)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Pass)
                    </td>
                    <td class="text-center">
                        @using (Html.BeginForm("Delete", "Login"))
                        {
                            @Html.Hidden("LoginId", item.LoginId)
                            <input type="submit" class="btn btn-default btn-xs" value="Usun" />
                        }
                    </td>
                </tr>
            }

        </table>
    </div>

    <div class="panel-footer">
        @Html.ActionLink("Dodaj", "Create", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Lista towarow", "Index", "Admin", null, new { @class = "btn btn-default" })
        @Html.ActionLink("Glowna strona", "List", "Books", null, new { @class = "btn btn-default" })
    </div>
</div>
